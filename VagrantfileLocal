# efactory-vm, testing
# poldracklab

VAGRANTFILE_API_VERSION = "2"

$script = <<SCRIPT

if [ ! -d $HOME/miniconda ]
then
 # install anaconda
 wget http://repo.continuum.io/miniconda/Miniconda-latest-Linux-x86_64.sh -O miniconda.sh
 chmod +x miniconda.sh
 ./miniconda.sh -b
 echo "export PATH=$HOME/miniconda/bin:\\$PATH" >> .bashrc
 echo "export PATH=$HOME/miniconda/bin:\\$PATH" >> .env
fi

# install python packages
$HOME/miniconda/bin/conda update --yes conda
$HOME/miniconda/bin/pip install setuptools
$HOME/miniconda/bin/pip install psycopg2
$HOME/miniconda/bin/conda install --yes pip numpy scipy nose traits networkx
$HOME/miniconda/bin/conda install --yes pandas

sudo apt-get update > /dev/null
sudo apt-get install -y --force-yes git 
sudo apt-get install -y --force-yes build-essential
sudo apt-get install -y --force-yes nginx

# Install efactory
sudo apt-get install -y --force-yes libreadline6 libreadline6-dev
sudo apt-get install -y --force-yes libncurses-dev
$HOME/miniconda/bin/pip install python-Levenshtein
$HOME/miniconda/bin/pip install git+git://github.com/NYUCCL/efactory.git@master

# Install postgresql (not tested)
sudo apt-get install -y --force-yes postgresql postgresql-contrib
sudo apt-get install -y --force-yes pgadmin3
sudo apt-get install -y --force-yes libpq-dev
sudo -u postgres psql -c "CREATE USER efactory WITH PASSWORD 'efactory';"
sudo -u postgres psql -c "CREATE DATABASE efactory;"

# Install MySQL
sudo debconf-set-selections <<< 'mysql-server mysql-server/root_password password efactory'
sudo debconf-set-selections <<< 'mysql-server mysql-server/root_password_again password efactory'
sudo apt-get install -y --force-yes libmysqlclient-dev
sudo apt-get install -y --force-yes mysql-server
$HOME/miniconda/bin/pip install MySQL-python
sudo apt-get install -y --force-yes vim

sudo /etc/init.d/nginx start

# Install efactory to generate everything else
mkdir -p $HOME/efactory-build
if [ ! -d $HOME/efactory-build/efactory-python ]
then
  git clone https://github.com/expfactory/efactory-python.git $HOME/efactory-build/efactory-python
  cd $HOME/efactory-build/efactory-python
  $HOME/miniconda/bin/pip install -r requirements.txt  
  $HOME/miniconda/bin/python setup.py install
fi

# Download experiments, battery, vm, doc repos
sudo chmod u+x $HOME/efactory-build/efactory-python/script/download_repos.py
$HOME/miniconda/bin/python $HOME/efactory-build/efactory-python/script/download_repos.py $HOME/efactory-build
sudo mysql -uroot -efactory < $HOME/efactory-build/vm/script/createdb.sql

# Replace standard index.html with link to efactory docs
sudo mv $HOME/efactory-build/vm/static/index.html /usr/share/nginx/html/index.html

CUSTOM_INSTALL="False"

if [[ $CUSTOM_INSTALL == "False" ]] ; then
    sudo chmod u+x $HOME/efactory-build/efactory-python/script/standard_setup_battery.py 
    $HOME/miniconda/bin/python $HOME/efactory-build/efactory-python/script/standard_setup_battery.py $HOME/efactory-battery
else

if ! [ -f $HOME/custom_setup_battery.py ]; then
echo """
#!/usr/bin/python
from efactory.battery import generate
import sys
battery_dest = sys.argv[1]
config = [SUB_CONFIG_SUB]
experiments = [SUB_EXPERIMENTS_SUB]
generate(battery_dest=battery_dest,experiments=experiments,config=config)        
""" >/tmp/aijfaef
sudo cp /tmp/aijfaef $HOME/custom_setup_battery.py
fi

sudo chmod u+x $HOME/custom_setup_battery.py
$HOME/miniconda/bin/python $HOME/custom_setup_battery.py $HOME/efactory-battery

fi 

# User should log in to battery folder
cd $HOME/efactory-battery
echo "Experiment factory battery generation complete!"
echo "Log in with ssh vagrant"
echo "Your machine's external address is 192.128.0.20"

SCRIPT

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|

  config.vm.define :engine do |engine_config|
    engine_config.vm.box = "ubuntu12.04-x86"
    engine_config.vm.box_url = "http://files.vagrantup.com/precise32.box"

    engine_config.vm.network :private_network, ip: "192.128.0.20"
    engine_config.vm.hostname = 'efactory-battery'

    engine_config.vm.provision "shell", :privileged => false, inline: $script
  end
end
